{
  "proseWrap": "always",
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["**/tsconfig.json", "**/tsconfig.*.json"],
      "options": {
        "parser": "jsonc"
      }
    },
    {
      "files": ["**/*.json", ".eslintrc"],
      "options": {
        "parser": "json",
        "trailingComma": "none"
      }
    }
  ]
}
